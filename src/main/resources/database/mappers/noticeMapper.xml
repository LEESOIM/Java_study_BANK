<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.iu.start.notice.NoticeDAO">

	<select id="getList" resultType="NoticeDTO">
		SELECT * FROM NOTICE;
	</select>
	
	<select id="getDetail" parameterType="NoticeDTO" resultType="NoticeDTO">
		SELECT * FROM NOTICE WHERE NUM=#{num}
	</select>

	<insert id="setNotice" parameterType="NoticeDTO">
		INSERT INTO NOTICE VALUES(NOTICE_SEQ.NEXTVAL,#{title},#{contents},#{writer},SYSDATE,#{hit})
	</insert>
	
	<update id="setUpdate" parameterType="NoticeDTO">
		UPDATE NOTICE SET TITLE=#{title}, CONTENTS=#{contents} WHERE NUM=#{num}
	</update>		
	
	<delete id="setDelete" parameterType="NoticeDTO">
		DELETE NOTICE WHERE NUM=#{num}
	</delete>
	
</mapper>