<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.iu.start.board.qna.QnaDAO">

	<insert id="setAddFile" parameterType="BoardFileDTO">
		INSERT INTO QNAFILE VALUES(FILE_SEQ.NEXTVAL, #{num}, #{fileName}, #{oriName})
	</insert>
	
	
	<insert id="setReplyAdd" parameterType="QnaDTO">
		<selectKey keyProperty="num" order="BEFORE" resultType="java.lang.Long">
			SELECT BOARD_SEQ.NEXTVAL FROM DUAL
		</selectKey>
		INSERT INTO QNA VALUES(#{num},#{title},#{contents},#{writer},SYSDATE,0,#{ref},#{step},#{depth})
	</insert>

	<update id="setStepUpdate" parameterType="QnaDTO">
		UPDATE QNA SET STEP=STEP+1 WHERE REF=#{ref} AND STEP>#{step}
	</update>

	<sql id="search">
		WHERE
			<choose>
				<when test="kind=='contents'">CONTENTS</when>
				<when test="kind=='writer'">WRITER</when>
				<otherwise>TITLE</otherwise>
			</choose>
		LIKE '%'||#{search}||'%'
	</sql>
	
	<select id="getList" resultType="QnaDTO" parameterType="Pager">
		SELECT * FROM 
		(
			SELECT ROWNUM R, Q.* FROM
			(SELECT * FROM QNA 
				<include refid="search"></include>
			ORDER BY REF DESC, STEP ASC) Q
		)
		WHERE R BETWEEN #{startRow} AND #{lastRow}
	</select>
	
	<select id="getCount" resultType="java.lang.Long">
		SELECT COUNT(NUM) FROM QNA <include refid="search"></include>
	</select>
	
	<select id="getDetail" parameterType="BoardDTO" resultMap="getDetailResult">
		SELECT *
		FROM QNA Q
		LEFT JOIN
		QNAFILE QF
		USING(NUM)
		WHERE NUM=#{num}
	</select>
	
	<resultMap type="QnaDTO" id="getDetailResult">
		<id column="NUM" property="num"/> <!-- PK -->
		<result column="TITLE" property="title"/>
		<result column="CONTENTS" property="contents"/>
		<result column="WRITER" property="writer"/>
		<result column="REGDATE" property="regDate"/>
		<result column="HIT" property="hit"/>
		<result column="REF" property="ref"/>
		<result column="STEP" property="step"/>
		<result column="DEPTH" property="depth"/>
		
		<collection property="boardFileDTOs" javaType="List" ofType="BoardFileDTO">
			<id column="FILENUM" property="fileNum"/> <!-- BoardFileDTOì˜ num -->
			<result column="FILENAME" property="fileName"/>
			<result column="ORINAME" property="oriName"/>
		</collection>
	</resultMap>
	
	<insert id="setAdd" parameterType="BoardDTO">
		<selectKey keyProperty="num" order="BEFORE" resultType="java.lang.Long">
			SELECT BOARD_SEQ.NEXTVAL FROM DUAL
		</selectKey>
		INSERT INTO QNA VALUES(#{num},#{title},#{contents},#{writer},SYSDATE,0,#{num},0,0)
	</insert>
	
	<update id="setUpdate" parameterType="BoardDTO">
		UPDATE QNA SET TITLE=#{title}, CONTENTS=#{contents} WHERE NUM=#{num}
	</update>
	
	<delete id="setDelete" parameterType="BoardDTO">
		DELETE QNA WHERE NUM=#{num} 
	</delete>
	
</mapper>